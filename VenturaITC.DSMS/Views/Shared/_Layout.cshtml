<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Resources.ResourcesSettings.AppAbbreviation - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div style="padding: 5px">
                    <img src="~/Images/company_logo.png" width="40" height="40" class="img-rounded" />
                </div>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(@Resources.ResourcesMenus.Home, "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @Resources.ResourcesMenus.Users
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink(@Resources.ResourcesMenus.UserRegistration, "Create", "Users")</li>
                            <li>@Html.ActionLink(@Resources.ResourcesMenus.UserManagement, "Index", "Users")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div style="padding-top:5px; text-align:right">
            <label>@Resources.ResourcesFields.Language: </label>
            <a href="@Url.Action("SetCulture", "Culture", new {lang="pt"})">@Resources.ResourcesFields.Portuguese</a>&nbsp;|&nbsp;<a href="@Url.Action("SetCulture", "Culture", new {lang="en"})">@Resources.ResourcesFields.English</a>
        </div>
        <div style="padding-top:5px; padding-bottom:10px">
            @Html.Partial("_Alert")
        </div>
        @RenderBody()
        <br />
        <hr />
        <footer class="site-footer">
            <p>
                @Resources.ResourcesSettings.AppAbbreviation
                <br />
                &copy; @DateTime.Now.Year - @Resources.ResourcesSettings.Company
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
